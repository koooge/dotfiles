[user]
	name = koooge
	email = koooooge@gmail.com
[core]
	autocrlf = input
	safecrlf = true
	editor = vim
[color]
	ui = true

[alias]
	a = add
	ad = add
	co = checkout
	st = status
	br = branch
	cm = commit
	cms = commit --signoff
	cpick = cherry-pick
	cpickc = cherry-pick --continue
	camend = commit --amend
	reb = rebase
	rebc = rebase --continue

	update = fetch --all --prune
	undo = reset --soft HEAD^
	stash-all = stash save --include-untracked
	glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	pullall =  submodule foreach git pull origin master

[merge]
	ff = only
	conflictstyle = diff3
[push]
	default = simple
	followTags = true
[status]
	showUntrackedFiles = all
[rebase]
	autostash = true