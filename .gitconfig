[user]
	name = koooge
	email = koooooge@gmail.com
[core]
	autocrlf = input
	safecrlf = true
	editor = vim
[color]
	ui = true

[alias]
	co = checkout
	st = status
	br = branch
	cpick = cherry-pick
	camend = commit --amend

	update = fetch --all --prune
	undo = reset --soft HEAD^
	stash-all = stash save --include-untracked
	glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

[merge]
	ff = only
	conflictstyle = diff3
[push]
	default = simple
	followTags = true
[status]
	showUntrackedFiles = all
[rebase]
	autostash = true
