[core]
	autocrlf = false
	safecrlf = true
	editor = vim
	excludesfile = ~/.gitignore_global
	ignorecase = false
[color]
	ui = true

[alias]
	a = add
	ad = add
	co = checkout
	st = status
	br = branch
	cm = commit --signoff --gpg-sign
	cpick = cherry-pick
	cpickc = cherry-pick --continue
	camend = commit --amend
	reb = rebase
	rebc = rebase --continue
	logp = log --pretty=format:'- %s:%n    %b' --reverse

	update = fetch --all --prune
	undo = reset --soft HEAD^
	stash-all = stash save --include-untracked
	pullall =  submodule foreach git pull origin master

[fetch]
	prune = true
	pruneTags = true
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[pull]
	ff = only
[merge]
	ff = only
	conflictstyle = diff3
[push]
	autoSetupRemote = true
	default = simple
	followTags = true
[status]
	showUntrackedFiles = all
[rebase]
	autostash = true

[gpg]
	program = gpg

[credential "https://github.com"]
	useHttpPath = true
